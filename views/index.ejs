<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Blog Placeholder</h1>

    <%# Loop through the posts, add each posts title and body to the page %>
    <% posts.forEach(post => { %>
    
        <h2><a href="/read/<%= post.uuid %>"><%= post.title %></a></h2>

        <p><%- post.body %></p>

    <% }) %>

  </body>
</html>
